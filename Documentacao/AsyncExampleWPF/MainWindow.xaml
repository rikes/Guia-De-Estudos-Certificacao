<Window x:Class="AsyncExampleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncExampleWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid RenderTransformOrigin="0.464,0.502">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="30,160,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" Height="20"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="270" Margin="125,30,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="370" TextChanged="textBox_TextChanged"/>

    </Grid>
</Window>
